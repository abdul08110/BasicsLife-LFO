<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Shadow (behind the circle) -->
    <item
        android:left="4dp"
        android:top="4dp">
        <shape android:shape="oval">
            <solid android:color="#40000000"/>
            <size
                android:width="112dp"
            android:height="112dp"/>
        </shape>
    </item>

    <!-- Main white circle -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/white"/>
            <stroke
                android:width="1dp"
                android:color="#10000000"/> <!-- subtle border -->
            <size
                android:width="120dp"
                android:height="120dp"/>
        </shape>
    </item>

    <!-- Optional inner glow -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:type="radial"
                android:gradientRadius="60%"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#10FFFFFF"
                android:endColor="#00FFFFFF"/>
            <size
                android:width="120dp"
                android:height="120dp"/>
        </shape>
    </item>
</layer-list>