<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#F5F9FF"
            android:centerColor="#E3F2FD"
            android:endColor="#BBDEFB"
            android:centerX="0.5"
            android:centerY="0.5" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="120%"
                android:centerX="0.5"
                android:centerY="0.5"
                android:startColor="#00000000"
                android:endColor="#10000000" />
        </shape>
    </item>
</layer-list>