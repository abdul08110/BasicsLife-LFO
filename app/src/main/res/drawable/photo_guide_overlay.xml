<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Horizontal Lines -->
    <item>
        <shape android:shape="line">
            <stroke
                android:width="1dp"
                android:color="#60FFFFFF"
                android:dashWidth="4dp"
                android:dashGap="2dp"/>
            <size android:height="1dp"/>
        </shape>
    </item>
    <item android:top="33dp">
        <shape android:shape="line">
            <stroke
                android:width="1dp"
                android:color="#60FFFFFF"
                android:dashWidth="4dp"
                android:dashGap="2dp"/>
            <size android:height="1dp"/>
        </shape>
    </item>
    <item android:top="66dp">
        <shape android:shape="line">
            <stroke
                android:width="1dp"
                android:color="#60FFFFFF"
                android:dashWidth="4dp"
                android:dashGap="2dp"/>
            <size android:height="1dp"/>
        </shape>
    </item>

    <!-- Vertical Lines -->
    <item>
        <shape android:shape="line">
            <stroke
                android:width="1dp"
                android:color="#60FFFFFF"
                android:dashWidth="4dp"
                android:dashGap="2dp"/>
            <size android:width="1dp"/>
        </shape>
    </item>
    <item android:left="33dp">
        <shape android:shape="line">
            <stroke
                android:width="1dp"
                android:color="#60FFFFFF"
                android:dashWidth="4dp"
                android:dashGap="2dp"/>
            <size android:width="1dp"/>
        </shape>
    </item>
    <item android:left="66dp">
        <shape android:shape="line">
            <stroke
                android:width="1dp"
                android:color="#60FFFFFF"
                android:dashWidth="4dp"
                android:dashGap="2dp"/>
            <size android:width="1dp"/>
        </shape>
    </item>

    <!-- Center Crosshair (Optional) -->
    <item android:gravity="center">
        <rotate android:fromDegrees="45">
            <shape android:shape="line">
                <stroke
                    android:width="1dp"
                    android:color="#80FF4081"
                    android:dashWidth="2dp"
                    android:dashGap="1dp"/>
                <size android:width="40dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>