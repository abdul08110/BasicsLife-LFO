<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:layout_marginTop="20dp"
    android:scrollbars="vertical"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

    <!-- Header -->
    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sell Through Search"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:padding="10dp"
        android:background="#FABD01"
        android:textColor="#000000" />

    <!-- Season Dropdown -->
    <TextView android:text="Season:" style="@style/LabelStyle"/>
    <Spinner
        android:id="@+id/spinner_season"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"/>

    <!-- Brand Dropdown -->
    <TextView android:text="Brand:" style="@style/LabelStyle"/>
    <Spinner
        android:id="@+id/spinner_brand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"/>

    <!-- Product Dropdown -->
    <TextView android:text="Product:" style="@style/LabelStyle"/>
    <Spinner
        android:id="@+id/spinner_product"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"/>

    <!-- Design Dropdown -->
    <TextView android:text="Design:" style="@style/LabelStyle"/>
    <Spinner
        android:id="@+id/spinner_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"/>

    <!-- Fit Dropdown -->
    <TextView android:text="Fit:" style="@style/LabelStyle"/>
    <Spinner
        android:id="@+id/spinner_fit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/btn_dropdown"/>

    <!-- Item Code Textbox -->
    <TextView android:text="Item Code:" style="@style/LabelStyle"/>
    <EditText
        android:id="@+id/text_itemcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter Item Code"
        android:background="@android:drawable/editbox_background"
        android:padding="8dp"/>

    <!-- Search Button -->
    <Button
        android:id="@+id/button_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search"
        android:textSize="16sp"
        android:background="#FABD01"
        android:textColor="#000000"
        android:layout_marginTop="16dp"/>

        </LinearLayout>
</ScrollView>
