<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9C4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFF9C4">

        <!-- Title -->
        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MONTH ATTENDANCE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="#333333"
            android:padding="12dp"
            android:layout_marginBottom="8dp"/>

        <!-- Month Spinner Group with Label and Border -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/spinner_border"
            android:padding="8dp"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Month"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerMonth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Staff Spinner Group with Label and Border -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/spinner_border"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Staff"
                android:textSize="14sp"
                android:textColor="#000000"
                android:paddingBottom="4dp" />

            <Spinner
                android:id="@+id/spinnerStaff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>



        <!-- Subheading -->
        <TextView
            android:id="@+id/txtSubheading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ATTENDANCE FOR THE MONTH OF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:background="#CCCCCC"
            android:padding="8dp"
            android:layout_marginBottom="4dp" />

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:baselineAligned="false">

            <TextView
                android:text="DATE"
                style="@style/AttendanceHeader"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/att_cell_border" />

            <TextView
                android:text="DAY"
                style="@style/AttendanceHeader"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/att_cell_border" />

            <TextView
                android:text="QTY"
                style="@style/AttendanceHeader"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/att_cell_border" />

            <TextView
                android:text="NSV"
                style="@style/AttendanceHeader"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/att_cell_border" />

            <TextView
                android:text="P/A"
                style="@style/AttendanceHeader"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/att_cell_border" />

        </LinearLayout>


        <!-- Data Container -->
        <LinearLayout
            android:id="@+id/attendanceContainer"
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            />

        <!-- Proceed Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:gravity="center_vertical">

            <!-- Left aligned BACK button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start">

                <Button
                    android:id="@+id/btnBackStep"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="← BACK"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/darker_gray"
                    android:background="@drawable/next_button_background"
                    android:paddingHorizontal="20dp" />
            </LinearLayout>

            <!-- Right aligned NEXT button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <Button
                    android:id="@+id/btnNextStep"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="NEXT →"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@drawable/next_button_background"
                    android:paddingHorizontal="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>
