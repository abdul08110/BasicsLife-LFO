<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9C4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <!-- STAFF HEADING -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STAFF"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="#FFC107"
            android:padding="12dp"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- HYGIENE CHECKS HEADING -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HYGIENE CHECKS"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="#757575"
            android:padding="8dp"
            android:textSize="18sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.8"
                android:text=""
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yes"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="NO"
                android:gravity="center"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="N/A"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>
        <!-- Hygiene Dynamic Row Container -->
        <LinearLayout
            android:id="@+id/hygieneContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp" />

        <!-- ATTENDANCE STATS HEADING -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ATTENDANCE STATS."
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="#616161"
            android:padding="8dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LAST 6 MONTHS"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="#212121"
            android:padding="6dp"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Attendance Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MONTH"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="LEAVE %"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ATT. %"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Attendance Dynamic Row Container -->
        <LinearLayout
            android:id="@+id/attendanceContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="4dp" />

        <!-- Proceed Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:gravity="end">

            <Button
                android:id="@+id/btnProceedStep3"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="NEXT â†’"
                android:backgroundTint="@color/colorPrimary"
                android:textColor="@android:color/white"
                android:paddingHorizontal="20dp"
                android:textStyle="bold"
                android:background="@drawable/next_button_background" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
