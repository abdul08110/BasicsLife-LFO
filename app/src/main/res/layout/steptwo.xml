<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9C4">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- STORE DETAILS -->
        <TextView
            android:id="@+id/titleStoreDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STORE DETAILS"
            android:gravity="center"
            android:textColor="#000000"
            android:background="#FFC107"
            android:padding="12dp"
            android:textSize="22sp"
            android:textStyle="bold" />

        <!-- Group and Store Code Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <TextView
                android:id="@+id/txtGroupName"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Group Name"
                android:background="#EEEEEE"
                android:textStyle="bold"
                android:padding="8dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtStoreCode"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Store Code"
                android:background="#EEEEEE"
                android:textStyle="bold"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Store Name -->
        <TextView
            android:id="@+id/txtStoreName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Store Name"
            android:background="#EEEEEE"
            android:textStyle="bold"
            android:padding="8dp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <!-- KEY CONTACTS -->
        <TextView
            android:id="@+id/titleKeyContacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="KEY CONTACTS"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="#212121"
            android:padding="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <!-- SM Name and Contact -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/edtSmName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="SM Name"
                android:inputType="textCapWords"
                android:maxLength="30"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edtSmContact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="SM Contact"
                android:inputType="phone"
                android:maxLength="10"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- DM Name and Contact -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/edtDmName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="DM Name"
                android:inputType="textCapWords"
                android:maxLength="30"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edtDmContact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="DM Contact"
                android:inputType="phone"
                android:maxLength="10"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- WH Name and Contact -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/edtWhName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="INV/WH Name"
                android:inputType="textCapWords"
                android:maxLength="30"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/edtWhContact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="WH Contact"
                android:inputType="phone"
                android:maxLength="10"
                android:background="#FFFFFF"
                android:padding="8dp"
                android:layout_marginStart="8dp"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Emails -->
        <EditText
            android:id="@+id/edtSmEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="SM Email"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/edtDmEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DM Email"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <EditText
            android:id="@+id/edtWhEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="INV/WH Email"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:textColor="#000000"
            android:layout_marginTop="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="STAFF INFORMATION"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:background="#212121"
            android:padding="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />
        <!-- Two-Column Layout for Staff 1 and Staff 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="2"
            android:divider="?android:dividerVertical"
            android:showDividers="middle"
            android:dividerPadding="8dp">

            <!-- STAFF 1 -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/etStaff1Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Staff 1 Name"
                    android:background="#EEEEEE"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/etStaff1Code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Emp. Code"
                    android:background="#EEEEEE"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/etStaff1Contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact #"
                    android:background="#EEEEEE"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/etStaff1Pf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="PF #"
                    android:background="#EEEEEE"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/etStaff1Esi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ESI #"
                    android:background="#EEEEEE"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/etStaff1Gross"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gross Pay"
                    android:background="#EEEEEE"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#000000" />
            </LinearLayout>

            <!-- STAFF 2 -->
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/etStaff2Name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Staff 2 Name"
                    android:background="#EEEEEE"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/etStaff2Code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Emp. Code"
                    android:background="#EEEEEE"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/etStaff2Contact"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact #"
                    android:background="#EEEEEE"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/etStaff2Pf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="PF #"
                    android:background="#EEEEEE"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/etStaff2Esi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ESI #"
                    android:background="#EEEEEE"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#000000"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/etStaff2Gross"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gross Pay"
                    android:background="#EEEEEE"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>

        <!-- NEXT BUTTON -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingTop="24dp">

            <Button
                android:id="@+id/btnProceedStep1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NEXT →"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:backgroundTint="#1976D2"
                android:paddingHorizontal="24dp"
                android:paddingVertical="10dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
