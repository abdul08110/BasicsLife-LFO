<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_marginBottom="8dp">

    <!-- GRN Title -->
    <TextView
        android:id="@+id/txtGrnTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GRN 1"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="#FFEB3B"
        android:padding="6dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp" />

    <!-- First Row Labels -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:text="PO"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#A5392C"
            android:padding="4dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:text="INV"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#A5392C"
            android:padding="4dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:text="QTY"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#A5392C"
            android:padding="4dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:text="LR"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#A5392C"
            android:padding="4dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- First Row Values -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/editPoNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#EEEEEE"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="PO123" />

        <TextView
            android:id="@+id/editInvoiceNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#EEEEEE"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:text="INV001" />

        <TextView
            android:id="@+id/editInvoiceQty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#EEEEEE"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="10" />

        <TextView
            android:id="@+id/editLrNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#EEE"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="LR01" />
    </LinearLayout>

    <!-- Second Row Labels -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:text="GRN QTY"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#A5392C"
            android:padding="4dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:text="GRN DATE"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#A5392C"
            android:padding="4dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:gravity="center" />

        <TextView
            android:text="GRN"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#A5392C"
            android:padding="4dp"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:gravity="center" />
    </LinearLayout>

    <!-- Second Row Values -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/editGrnQty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#EEE"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="8" />

        <TextView
            android:id="@+id/editGrnDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#EEE"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="2025-08-01" />

        <TextView
            android:id="@+id/editGrnNo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#EEE"
            android:textAlignment="center"
            android:padding="8dp"
            android:textColor="#000"
            android:textStyle="bold"
            android:text="GRN001" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="#D84315" />

</LinearLayout>
