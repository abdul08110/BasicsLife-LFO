<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9C4"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!-- Title Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="COUNTER ASSESSMENT"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#FFB300"
            android:textColor="@android:color/white"
            android:padding="8dp" />
        <!-- Offer Communication Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:padding="8dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CURRENT OFFERS"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/spinnerOffer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:id="@+id/spinnerOffer2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>

            <Spinner
                android:id="@+id/spinnerOffer3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_mix_sales_qty_mtd"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:background="#000000"
            android:textColor="@android:color/white"
            android:padding="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp" />
        <!-- Horizontal Scroll for Table -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">
        <!-- Product Table -->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1,2,3,4,5,6"
            android:background="#FFF9C4"
            android:padding="6dp"
            android:divider="@android:color/darker_gray"
            android:showDividers="middle">

            <!-- Header Row -->
            <TableRow>
                <TextView android:text=""
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:text="BSH"
                    style="@style/SalesHeaderCell"/>
                <TextView
                    android:text="BTR"
                    style="@style/SalesHeaderCell"/>
                <TextView
                    android:text="BTS"
                    style="@style/SalesHeaderCell"/>
            </TableRow>

            <!-- MDQ Row -->
            <TableRow>
                <TextView
                    android:text="MDQ"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_margin="2dp"
                    android:background="#EEEEEE"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textColor="#000000"

                    />
                <TextView
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="2dp"/>
            </TableRow>

            <!-- SOH Row -->
            <TableRow>
                <TextView
                    android:text="SOH"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="2dp"/>

            </TableRow>

            <!-- SOH% Row -->
            <TableRow>
                <TextView
                    android:text="SOH%"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="2dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="2dp"/>

            </TableRow>

            <!-- ON-FLOOR Row -->
            <TableRow>
                <TextView
                    android:text="ON-FLOOR"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp"/>
                <EditText
                    android:id="@+id/onFloorBSH"
                    android:background="#FFFFFF"
                    android:inputType="number"
                    android:padding="8dp"
                    android:layout_margin="2dp"/>
                <EditText
                    android:id="@+id/onFloorBTR"
                    android:background="#FFFFFF"
                    android:inputType="number"
                    android:padding="8dp"
                    android:layout_margin="2dp"/>
                <EditText
                    android:id="@+id/onFloorBTS"
                    android:background="#FFFFFF"
                    android:inputType="number"
                    android:padding="8dp"
                    android:layout_margin="2dp"/>

            </TableRow>

            <!-- SALES Row -->
            <TableRow>
                <TextView
                    android:text="SALES"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="2dp"/>
                <TextView
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="2dp"/>
                <TextView
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="2dp"/>

            </TableRow>

            <!-- SALES vs SOH Row -->
            <TableRow>
                <TextView
                    android:text="SALES%"
                    android:padding="8dp"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginEnd="4dp"/>
                <TextView
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="2dp"/>
                <TextView
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="2dp"/>
                <TextView
                    android:background="#EEEEEE"
                    android:padding="8dp"
                    android:layout_margin="2dp"/>
            </TableRow>

        </TableLayout>
        </HorizontalScrollView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">
            <!-- Product Table -->
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2,3,4,5,6"
                android:background="#FFF9C4"
                android:padding="6dp"
                android:divider="@android:color/darker_gray"
                android:showDividers="middle">

                <!-- Header Row -->
                <TableRow>
                    <TextView android:text=""
                        android:layout_marginEnd="4dp"/>
                    <TextView
                        android:text="BJN"
                        style="@style/SalesHeaderCell"/>
                    <TextView
                        android:text="PRO"
                        style="@style/SalesHeaderCell"/>
                    <TextView
                        android:text="OTH"
                        style="@style/SalesHeaderCell"/>
                </TableRow>

                <!-- MDQ Row -->
                <TableRow>
                    <TextView
                        android:text="MDQ"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:background="#EEEEEE"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:background="#EEEEEE"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:background="#EEEEEE"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>
                </TableRow>

                <!-- SOH Row -->
                <TableRow>
                    <TextView
                        android:text="SOH"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:background="#EEEEEE"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:background="#EEEEEE"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:background="#EEEEEE"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>
                </TableRow>
                <!-- SOH% Row -->
                <TableRow>
                    <TextView
                        android:text="SOH%"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:background="#EEEEEE"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:background="#EEEEEE"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:background="#EEEEEE"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>

                </TableRow>
                <!-- ON-FLOOR Row -->
                <TableRow>
                    <TextView
                        android:text="ON-FLOOR"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp"/>
                    <EditText
                        android:id="@+id/onFloorBJN"
                        android:background="#FFFFFF"
                        android:inputType="number"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>
                    <EditText
                        android:id="@+id/onFloorPRO"
                        android:background="#FFFFFF"
                        android:inputType="number"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>
                    <EditText
                        android:id="@+id/onFloorOTH"
                        android:background="#FFFFFF"
                        android:inputType="number"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>
                </TableRow>

                <!-- SALES Row -->
                <TableRow>
                    <TextView
                        android:text="SALES"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp"/>

                    <TextView
                        android:background="#EEEEEE"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:background="#EEEEEE"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:background="#EEEEEE"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>
                </TableRow>

                <!-- SALES vs SOH Row -->
                <TableRow>
                    <TextView
                        android:text="SALES%"
                        android:padding="8dp"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_marginEnd="4dp"/>
                    <TextView
                        android:background="#EEEEEE"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:background="#EEEEEE"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>
                    <TextView
                        android:background="#EEEEEE"
                        android:padding="8dp"
                        android:layout_margin="2dp"/>
                </TableRow>

            </TableLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="16dp"
            android:gravity="center_vertical">

            <!-- Left aligned BACK button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start">

                <Button
                    android:id="@+id/btnBackStep"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="← BACK"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@android:color/darker_gray"
                    android:background="@drawable/next_button_background"
                    android:paddingHorizontal="20dp" />
            </LinearLayout>

            <!-- Right aligned NEXT button -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end">

                <Button
                    android:id="@+id/btnNextStep"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="NEXT →"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:backgroundTint="@color/colorPrimary"
                    android:background="@drawable/next_button_background"
                    android:paddingHorizontal="20dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>