<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- App Header with Floating Logo -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:strokeColor="#80FFFFFF"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/gradient_header"
                android:padding="24dp"
                android:gravity="center">

                <!-- Floating Logo with Shadow -->
                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:contentDescription="VM Logo"
                    android:elevation="12dp"
                    android:translationZ="12dp"
                    android:background="@drawable/circle_white_bg"/>

                <!-- App Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BASICS COUNTER"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.1"
                    android:layout_marginTop="16dp"
                    />

                <!-- Tagline -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VISUAL MERCHANDISING"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:letterSpacing="0.05"
                    android:layout_marginTop="8dp"
                    />

                <!-- Progress Indicator -->
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:layout_width="150dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="16dp"
                    android:progress="25"
                    app:indicatorColor="#FFFFFF"
                    app:trackColor="#80FFFFFF"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Photo Capture Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Section Header -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ENTRY PHOTO"
                    android:textColor="#3F51B5"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    android:layout_marginBottom="16dp"/>

                <!-- Photo Frame with Guidance -->
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:background="@drawable/photo_frame_border">

                    <!-- Main Image View -->
                    <ImageView
                        android:id="@+id/imgMorningPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:contentDescription="Entry photo"
                        android:src="@drawable/placeholder_photo"/>

                </FrameLayout>

                <!-- Capture Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCaptureMorning"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_marginTop="16dp"
                    android:text="CAPTURE ENTRY PHOTO"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:letterSpacing="0.05"
                    app:icon="@drawable/camera_icon"
                    android:drawablePadding="12dp"
                    app:iconTint="@android:color/white"
                    app:iconGravity="textStart"
                    app:iconSize="24dp"
                    app:cornerRadius="28dp"
                    app:backgroundTint="#FF4081"
                    app:elevation="4dp"
                    app:rippleColor="#E91E63" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Navigation Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackStep"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Back"
                android:textColor="#3F51B5"
                app:strokeColor="#3F51B5"
                app:cornerRadius="8dp"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNextStep"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Next"
                android:textColor="#FFFFFF"
                app:backgroundTint="#3F51B5"
                app:cornerRadius="8dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>