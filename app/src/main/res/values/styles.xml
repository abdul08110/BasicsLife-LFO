<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/basics</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>
    <style name="GridItem">
        <item name="android:layout_width">wrap_content</item> <!-- Ensures proper text layout -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|center_vertical</item> <!-- Center align text -->
        <item name="android:background">#E0E0E0</item> <!-- Light gray background -->
        <item name="android:textStyle">bold</item> <!-- Bold text -->
        <item name="android:textColor">#333333</item> <!-- Dark gray text color -->
    </style>
    <style name="DetailTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="LabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="navigationTheme">
        <item name="colorPrimary">@color/basics</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="TextLabel">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:color">@color/black</item>
    </style>
    <style name="HeaderCell">
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CellInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:inputType">number</item>
    </style>
    <style name="LabelGrey">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#E0E0E0</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="BoxWhite">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AttendanceHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">#0077cc</item>
    </style>
    <style name="SalesInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#EEEEEE</item>
        <item name="android:padding">8dp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="SalesInput2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:padding">8dp</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:layout_margin">2dp</item>
    </style>



    <style name="HeaderCell2">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#D84315</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="LabelCell">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="LabelCellDark">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="SalesHeaderCell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">#A5392C</item> <!-- Or use #D84315 -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="SectionHeader">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">22sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#FFC107</item>
        <item name="android:padding">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SectionHeaderDark">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#A5392C</item>
        <item name="android:padding">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/rounded_edittext_bg</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#888888</item>
        <item name="android:drawableStart">@drawable/ic_edit</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <style name="HorizontalRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
    <style name="StaffFieldStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">#EEEEEE</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="TableHeader">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>

