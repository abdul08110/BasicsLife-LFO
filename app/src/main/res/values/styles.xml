<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="colorPrimary">@color/basics</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>
    <style name="GridItem">
        <item name="android:layout_width">wrap_content</item> <!-- Ensures proper text layout -->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal|center_vertical</item> <!-- Center align text -->
        <item name="android:background">#E0E0E0</item> <!-- Light gray background -->
        <item name="android:textStyle">bold</item> <!-- Bold text -->
        <item name="android:textColor">#333333</item> <!-- Dark gray text color -->
    </style>
    <style name="DetailTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="LabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="navigationTheme">
        <item name="colorPrimary">@color/basics</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="TextLabel">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/nunito</item>
        <item name="android:color">@color/black</item>
    </style>
    <style name="HeaderCell">
        <item name="android:padding">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CellInput">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_bg</item>
        <item name="android:padding">10dp</item>
        <item name="android:inputType">number</item>
    </style>
</resources>

